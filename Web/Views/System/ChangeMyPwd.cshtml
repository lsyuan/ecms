@{
    ViewBag.Title = "密码修改";
    Layout = "~/Views/Shared/_layoutContent.cshtml";
}
@section head{
    <script src="@Url.Content("~/Scripts/js/System/ChangePwd.js")" type="text/javascript"></script>
}

<table class="layoutTable" style="margin: 0 auto; width: 100%;">
    <tr>
        <td style="width: 50%">
            <label class="name">原密码：</label></td>
        <td>
            <input type="password" name="TB_Origin" id="TB_Origin" value="" /></td>
    </tr>
    <tr>
        <td>
            <label class="name">新密码：</label></td>
        <td>
            <input type="password" name="TB_NewPwd" id="TB_NewPwd" value="" /></td>
    </tr>
    <tr>
        <td>
            <label class="name">确认密码：</label></td>
        <td>
            <input type="password" name="TB_NewConfirm" id="TB_NewConfirm" value="" /></td>
    </tr>
    <tr>
        <td colspan="2" align="center">
            <br />
            <a id="BT_Commit" href="javascript:void(0)" class="web_button">确&nbsp;&nbsp;&nbsp;&nbsp;定</a>
            <a id="BT_Clear" href="javascript:void(0)" class="web_button">清&nbsp;&nbsp;&nbsp;&nbsp;空</a>
            <br />
            <br />
        </td>
    </tr>
</table>
<div style="display: none;" title="页面提示" id="DIV_Msg">
    <p id="msg"></p>
</div>
