<table id="dgFeeUnit">
    <thead>
        <tr>
            <th field="ID" checkbox="true" width="30">选择</th>
            <th field="Name" width="100">单位名称</th>
            <th field="Level" width="120">单位类型</th>
            <th field="TimeValue" width="120">权重</th>
        </tr>
    </thead>
</table>
<!--dialog begin-->
<div id="dgAddOrEdit" action="#">
    <form id="frmAddOrEditUnit">
        <table class="layoutTable">
            <tr>
                <td style="width: 40%">
                    <input type="hidden" id="CIID" name="ID" value="" dn="ID" />
                    <label class="name">单位名称:</label>
                </td>
                <td>
                    <input type="text" name="name" dn="Name" id="name" vRequired="t"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label class="name">单位类型:</label></td>
                <td>
                    <select id="SELECT_LEVEL" dn="Level" onchange="ControlTimeValue()">
                        <option value="1" selected="selected">计量</option>
                        <option value="2">计时</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>
                    <label class="name">权重:</label></td>
                <td>
                    <input type="text" name="TimeValue" dn="TimeValue" id="TimeValue"  vRequired="t"/>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <label class="tips">权重表示一个单位收费时间,月为基数如果小于一个月,请设置为0</label>
                </td>
            </tr>
        </table>
    </form>
</div>
<!--dialog end-->
