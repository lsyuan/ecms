@{
    ViewBag.Title = "区域收费统计";
    Layout = "~/Views/Shared/_layoutContent.cshtml";
}
@section head{
    <script src="@Url.Content("~/Scripts/js/Analysis/AreaChargeAnalysis.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/highcharts.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/exporting.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/grid.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/LodopFuncs.js")" type="text/javascript"></script>
}
<object id="LODOP" classid="clsid:2105C259-1E0C-4534-8141-A753534CB4CA" height="0"
    width="0">
    <embed id="LODOP_EM" height="0" pluginspage="install_lodop.exe" type="application/x-print-lodop"
        width="0"></embed>
</object>
<div id="toolbar" class="toolbar">
    统计时间段：<input type="text" id="beginDate" data-options="width:100" class="easyui-datebox" />
    -
    <input type="text" id="endDate" data-options="width:100" class="easyui-datebox" />
    统计区域：
    <input type="hidden" id="txtAreaID" />
    <input type="text" id="txtAreaName" readonly="readonly" dn="AreaName" />
    <a id="btnAnalysis" href="javascript:void(0)" class="web_button">开始统计</a> <a id="btnPrint"
        href="javascript:print()" class="web_button">打印图表</a>
</div>
<div id="areaAnalysisContent" style="min-width: 400px; height: 400px; margin: 0 auto">
</div>
<!--地区选择框dialog begin-->
<div id="dArea">
    <table id="areaTreeGrid" class="easyui-treegrid" checkbox="true" url="/System/GetAllAreaJson"
        idfield="Identifier" treefield="Area_Name" fitcolumns="true">
        <thead>
            <tr>
                <th field="Identifier" checkbox="true" rowspan="2" editor="text">
                    地区码
                </th>
                <th field="Area_Name" rowspan="2" width="150" editor="text">
                    地区
                </th>
                <th field="ManagerName" rowspan="2" width="50">
                    区域负责人
                </th>
            </tr>
        </thead>
    </table>
</div>
<!--地区选择框dialog end-->
