@{
    ViewBag.Title = "临时收费";
    Layout = "~/Views/Shared/_layoutContent.cshtml";
}
@section head{
    <script type="text/javascript" src="@Url.Content("~/Scripts/js/Charge/TempCharge.js")" ></script>
    <style type="text/css">
        .combo { vertical-align: middle; }
        img { cursor: pointer; }
    </style>
}
<div class="toolbar">客户名称:<input type="text" id="CustomerNameSearch" />
    缴费时间:<input id="CreateTimeSearch" type="text" class="easyui-datebox" />
    <a id="btnSearch" href="javascript:void(0)" class="web_button">查&nbsp;&nbsp;&nbsp;&nbsp;询</a>
</div>
<table id="TempChargeDataTable">
    <thead>
        <tr>
            @*<th field="ID" checkbox="true" width="3">
                <input type="checkbox" class="chkAll" value="" /></th>*@
            <th width="10" field="CUSTOMERNAME">客户名称 </th>
            <th width="10" field="CHARGENAME">收费名称</th>
            <th width="10" field="MONEY">收费金额</th>
            <th width="10" field="NAME">操作人</th>
            <th width="10" field="CREATETIME">收费时间</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<!--新增弹出框 begin-->
<div id="dgAddTempCharge" action="#">
    <form id="frmAddTempCharge">
        <table class="layoutTable" style="margin: 3px auto;" style="width: 100%">
            <tr>
                <td style="width: 20%;">
                    <label class="name">客户名称：</label></td>
                <td style="width: 30%;">
                    <input type="text" dn="CustomerName" id="CustomerName" vrequired="t" /></td>
                <td style="width: 17%;">
                    <label class="name">收费名称：</label></td>
                <td>
                    <input type="text" dn="ChargeName" id="ChargeName" vrequired="t" /></td>
            </tr>
            <tr>
                <td colspan="4">
                    <!--details begin-->
                    <table class="layoutTable" style="margin: 0px;">
                        <tr>
                            <td colspan="4" style="text-align: left; font-weight: bolder;">收费明细：</td>
                        </tr>
                        <tr>
                            <td style="width: 20%">
                                <label class="name">收费项：</label></td>
                            <td style="width: 30%">
                                <select id="chargeItem" name="chargeItem" />
                            </td>
                            <td style="width: 18%">
                                <label class="name">缴费数量：</label></td>
                            <td>
                                <input type="text" name="Money" class="easyui-numberbox" data-options="min:0,precision:2" vrequired="t" />
                                <img src="../../Content/images/EasyUIImages/edit_add.png" alt="添加" title="添加缴费项" id="btnAddChargeItem" />
                            </td>
                        </tr>
                    </table>
                    <!--details end-->
                </td>
            </tr>
            <tr>
                <td>
                    <label class="name">应缴金额：</label></td>
                <td>
                    <input type="text" id="txtGiveChange" readonly="readonly" style="background-color: #ccc" />￥</td>
                <td>
                    <label class="name">用户实缴：</label></td>
                <td>
                    <input type="text" id="txtFee" class="easyui-numberbox" vrequired="t" data-options="min:0,precision:2" />￥
                </td>
            </tr>
            <tr>
                <td colspan="4">备注：<br />
                    <textarea dn="Remark" id="Remark" rows="5" cols="30" style="width: 98%"></textarea></td>
            </tr>
        </table>
    </form>
</div>
<!--新增弹出框 begin-->
