@{
    ViewBag.Title = "部门管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.jbind.js")"  charset="utf-8" type="text/javascript"></script>
<link href="../../Content/jquery.treeTable.css" rel="stylesheet" />
<script src="../../Scripts/jquery.JsonData.js"></script>
<script src="@Url.Content("~/Scripts/jquery.treeTable.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/js/System/Poup.js")" type="text/javascript"></script>
<div class="Bar">
    <button id="BT_Search" onclick="Delete()">删除</button>
    <button id="BT_Add" onclick="AddOrModify()">新增子菜单</button>
    <button id="BT_Modify" onclick="AddOrModify(1)">修改</button>
</div>
<div id="Main" style="margin-right: 4px; overflow-x: hidden; overflow-y: auto;">
    <table id="myDataTable" class="display" style="width: 100%">
        <thead>
            <tr>
                <th class="ui-state-default" style="width: 200px;">菜单名称</th>
                <th class="ui-state-default">路径</th>
            </tr>
            <tr id="CompanyList" style="display: none;">
                <td>
                    <input type="checkbox" class="chkVote" value='{ID}' />{NAME}</td>
                <td>{PATH}</td>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
<div id="formAddNewRow" style="display: none;" title="新建菜单">
    <input type="hidden" id="id" name="id" value="-1" dn="ID" rel="0" />
    <table id="Tab_NewDept" border="0" cellpadding="0" cellspacing="0" class="EditTable">
        <tr>
            <td>
                <label class="name">名称</label></td>
            <td>
                <input type="hidden" id="HFD_POUP_ID" dn="ID" />
                <input type="text" dn="NAME" name="name" id="TB_PoupName" class="{required:true}" /></td>
        </tr>
        <tr>
            <td>路径</td>
            <td>
                <input type="text" name="TB_Path" value="" id="TB_Path" dn="PATH" />
            </td>
        </tr>
    </table>
    <div class="footBar">
        <button onclick="AddNewPoup()">确定</button>
        <button onclick="Cancel()">取消</button>
    </div>
</div>
<div id="Footer"></div>
<div style="display: none" id="dialog-confirm" title="操作提示：">
    <p>
        <span class="ui-icon ui-icon-alert" style="float: left; margin: 0 7px 20px 0;"></span>
        <p id="msg"></p>
    </p>
</div>
